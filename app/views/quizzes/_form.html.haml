= form_for @quiz, url: lesson_quizzes_path(@quiz.lesson) do |f|
  -if @quiz.errors.any?
    #error_explanation
      %h2= "#{pluralize(@quiz.errors.count, "error")} prohibited this quiz from being saved:"
      %ul
        - @quiz.errors.full_messages.each do |msg|
          %li= msg

  .actions
    = f.submit 'Save'
