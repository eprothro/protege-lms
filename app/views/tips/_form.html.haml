= form_for @tip do |f|
  -if @tip.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tip.errors.count, "error")} prohibited this tip from being saved:"
      %ul
        - @tip.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :body
    = f.text_field :body
  .field
    = f.label :question
    = f.text_field :question
  .actions
    = f.submit 'Save'
