%header
  .navbar
    .navbar-inner
      = link_to 'Protégé', root_path, class: 'brand'
      %nav
        .visible-desktop
          %ul.nav
            %li.divider-vertical
            %li= link_to 'Series', series_index_path
            %li.divider-vertical
            %li= link_to 'Courses', courses_path
            %li.divider-vertical
            %li= link_to 'Lessons', lessons_path
        .sign-in.pull-right{style: "width: auto"}
          %ul.nav
            %li.divider-vertical
            - if current_user
              %li= link_to current_user, current_user
              %li.divider-vertical
              %li
                %a{ href: destroy_user_session_path }
                  %i.icon-off
            - else
              %li= link_to 'Sign in', new_user_session_path
            %li.divider-vertical.hidden-phone
