= form_for @series do |f|
  -if @series.errors.any?
    #error_explanation
      %h2= "#{pluralize(@series.errors.count, "error")} prohibited this series from being saved:"
      %ul
        - @series.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description, {id: 'course_description',class: 'wysihtml5', placeholder: "What does your series cover?"}
  .actions
    = f.submit 'Save'
