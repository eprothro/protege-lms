= form_for @organization do |f|
  -if @organization.errors.any?
    #error_explanation
      %h2= "#{pluralize(organization.errors.count, "error")} prohibited this organization from being saved:"
      %ul
        - @organization.errors.full_messages.each do |msg|
          %li= msg

  = f.label :name
  = f.text_field :name, autofocus: true
  = f.label :gravatar_email
  = f.text_field :gravatar_email
  .submit
    - submit_text = @organization.id.blank? ? 'Create organization' : 'Save changes'
    = f.submit submit_text, class: 'btn btn-primary'